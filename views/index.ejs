<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> PasswordPal: Add Password</title>
    <link rel="stylesheet" href="/indexStyling.css">
    <link rel="stylesheet" href="/generalStyling.css">
  </head>
  <body>
    <div class="container">
      <div class="overlay first"></div>
      <div class="overlay second"></div>
      <div class="overlay third"></div>

      <!--Landing page logo and slogan-->
      <div id="logo">
        <a href="/"><h1 id="logoTitle">PasswordPal</h1></a>
        <p id="logoSlogan">A place to store all your passwords!</p>
      </div>
      <!--Landing page buttons-->
      <div class="buttonGroup">
          <button id="walletButton">See Password Wallet</button>
          <button id="addCardButton">Add Account/Password</button>
      </div>
    </div>

    <!--GSAP TweenMax imported library-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js" integrity="sha512-DkPsH9LzNzZaZjCszwKrooKwgjArJDiEjA5tTgr3YX4E6TYv93ICS8T41yFHJnnSmGpnf0Mvb5NhScYbwvhn2w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!--Landing page animations-->
    <script>
      TweenMax.to('.first', 1.5, {
        delay: 0,
        left: '-100%',
        ease: Power1.easeInOut
      })

      TweenMax.to('.second', 1.5, {
        delay: 0.2,
        left: '-100%',
        ease: Power1.easeInOut
      })

      TweenMax.to('.third', 1.5, {
        delay: 0.4,
        left: '-100%',
        ease: Power1.easeInOut
      })

      TweenMax.from('#logoTitle', 1, {
        delay: 2.0,
        opacity: 0,
        ease: Power1.easeInOut
      })

      TweenMax.from('#logoSlogan', 1, {
        delay: 3.0,
        opacity: 0,
        y: -50,
        ease: Power1.easeInOut
      })

      TweenMax.from('#walletButton', 1, {
        delay: 4.0,
        opacity: 0,
        x: -30,
        ease: Power1.easeInOut
      })

      TweenMax.from('#addCardButton', 1, {
        delay: 4.2,
        opacity: 0,
        x: 30,
        ease: Power1.easeInOut
      })

      document.getElementById("walletButton").onclick = () => {
        setTimeout(toWallet, 2000);

        TweenMax.to('#addCardButton', 1, {
          delay: 0,
          opacity: 0,
          x: -30,
          ease: Power1.easeInOut
        })

        TweenMax.to('#walletbutton', 1, {
          delay: 0.2,
          opacity: 0,
          x: 30,
          ease: Power1.easeInOut
        })

        TweenMax.to('#logoSlogan', 1, {
          delay: 0.4,
          opacity: 0,
          y: 50,
          ease: Power1.easeInOut
        })

        TweenMax.to('#logoTitle', 1, {
          delay: 0.6,
          opacity: 0,
          ease: Power1.easeInOut
        })

        TweenMax.from('.third', 1.5, {
          delay: 1.0,
          left: '100%',
          ease: Power1.easeInOut
        })

        TweenMax.from('.second', 1.5, {
          delay: 1.2,
          left: '100%',
          ease: Power1.easeInOut
        })

        TweenMax.from('.first', 1.5, {
          delay: 1.3,
          left: '100%',
          ease: Power1.easeInOut
        })
      }

      document.getElementById("addCardButton").onclick = () => {
        setTimeout(toAddCard, 3000);

        TweenMax.to('#addCardButton', 1, {
          delay: 0,
          opacity: 0,
          x: -30,
          ease: Power1.easeInOut
        })

        TweenMax.to('#walletbutton', 1, {
          delay: 0.2,
          opacity: 0,
          x: 30,
          ease: Power1.easeInOut
        })

        TweenMax.to('#logoSlogan', 1, {
          delay: 0.4,
          opacity: 0,
          y: 50,
          ease: Power1.easeInOut
        })

        TweenMax.to('#logoTitle', 1, {
          delay: 0.6,
          opacity: 0,
          ease: Power1.easeInOut
        })

        TweenMax.from('.third', 1.5, {
          delay: 1.0,
          left: '100%',
          ease: Power1.easeInOut
        })

        TweenMax.from('.second', 1.5, {
          delay: 1.2,
          left: '100%',
          ease: Power1.easeInOut
        })

        TweenMax.from('.first', 1.5, {
          delay: 1.3,
          left: '100%',
          ease: Power1.easeInOut
        })
      }

      function toWallet() {
        window.location.href = '/wallet';
      }

      function toAddCard() {
        window.location.href = '/addCard';
      }
    </script>
  </body>
</html>