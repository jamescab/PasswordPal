<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> PasswordPal: Find Password</title>
        <link rel="stylesheet" href="../public/findStyle.css">
    </head>
    <%- include('./partials/header.ejs') %>
    <body>

        <%- include('./partials/nav.ejs') %>

        <div class="container">
            <div class="passPal">
                <h2>Enter the application name of the password you're searching for:</h2>
            </div>
            <div class="row">
                <form action="/findDetails" method="GET">
                    <input type="text" id="appName" placeholder="Application name here" required>
                    <button id="searchButton">Search</button>
                </form>
            </div>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>