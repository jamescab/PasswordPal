<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
          <title> PasswordPal: <%= card.app%> Details></title>
          <link rel="stylesheet" href="/detailStyling.css">
          <link rel="stylesheet" href="/generalStyling.css">
  </head>

  <body>
    <div class="detailsContent">
      <h2><%= card.app %></h2>
      <div class="content">
        <p class="details">Username/Email: <%= card.user %></p>
        <p class="details">Password: <%= card.pass %></p>
        <p class="details">Created At: <%= card.createdAt %></p>
      </div>
      <a class="delete" data-doc="<%= card._id %>">DELETE</a>
      <a id="backFromDetails" href="/wallet"> Back to Wallet </a>
    </div>

    <script>
      const trashcan = document.querySelector('a.delete');

      trashcan.addEventListener('click', (e) => {
        const endpoint = `/wallet/${trashcan.dataset.doc}`;

        fetch(endpoint, {
          method: 'DELETE',
        }).then(response => response.json())
        .then(data => window.location.href = data.redirect)
        .catch(err => console.log(err));
      });
    </script>
  </body>
</html>