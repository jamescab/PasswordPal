<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> PasswordPal: Wallet</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body class="walletBody">
        <div class="overlay first"></div>
        <div class="overlay second"></div>
        <div class="overlay third"></div>
        <a id="addPass">Add Another Password</a>
        <div class="walletContainer">
            <% if (cards.length > 0) { %>
                <% cards.forEach(card => { %>
                    <div class="cardEntry">
                        <div class="cardFace c1">
                            <div class="content">
                                <a>Username/Email: <%= card.user %></a><br/><br/>
                                <a>Password: <%= card.pass %></a><br/><br/>
                                <a class="expandButton" href="/wallet/<%= card._id %>">Expand</a><br/>
                            </div>
                        </div>
                        <div class="cardFace c2">
                            <h2><%= card.app %></h2>
                        </div>
                    </div>
                <% }) %>
              <% } else { %>
                <p>No passwords yet. Add some!</p>
              <% } %>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js" integrity="sha512-DkPsH9LzNzZaZjCszwKrooKwgjArJDiEjA5tTgr3YX4E6TYv93ICS8T41yFHJnnSmGpnf0Mvb5NhScYbwvhn2w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script>
            TweenMax.to('.first', 1.5, {
              delay: 0,
              left: '-100%',
              ease: Power1.easeInOut
            })
    
            TweenMax.to('.second', 1.5, {
              delay: 0.2,
              left: '-100%',
              ease: Power1.easeInOut
            })
    
            TweenMax.to('.third', 1.5, {
              delay: 0.4,
              left: '-100%',
              ease: Power1.easeInOut
            })
    
            document.getElementById("addPass").onclick = () => {
              TweenMax.from('.third', 1.5, {
                delay: 0.0,
                left: '100%',
                ease: Power1.easeInOut
              })
    
              TweenMax.from('.second', 1.5, {
                delay: 0.2,
                left: '100%',
                ease: Power1.easeInOut
              })
    
              TweenMax.from('.first', 1.5, {
                delay: 0.3,
                left: '100%',
                ease: Power1.easeInOut
              })
              
              setTimeout(toAddCard, 1000);
            }
            
            function toAddCard() {
              window.location.href = '/addCard';
            }
          </script>
    </body>
</html>