<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> PasswordPal: Wallet</title>
    </head>
    <%- include('./partials/header.ejs') %>
    <body class="walletBody">
        <a id="addPass" href="/add">+ Add Another Password +</a>
        <div class="walletContainer">
            <% if (cards.length > 0) { %>
                <% cards.forEach(card => { %>
                    <div class="cardEntry">
                        <div class="cardFace c1">
                            <div class="content">
                                <p><a class="single" href="/wallet/<%= card._id %>"><%= card.user %></a></p>
                                <p><a class="single" href="/wallet/<%= card._id %>"><%= card.pass %></a></p>
                            </div>
                        </div>
                        <div class="cardFace c2">
                            <h2><%= card.app %></h2>
                        </div>
                    </div>
                <% }) %>
              <% } else { %>
                <p>No passwords yet. Add some!</p>
              <% } %>
