<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> PasswordPal: Wallet</title>
        <link rel="stylesheet" href="../public/walletStyle.css">
    </head>
    <%- include('./partials/header.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div class="container">
            <div class="passPal">
                <h2>Wallet</h2>
                <table>
                    <tr>
                        <th>Application</th>
                        <th>Email/Username</th>
                        <th>Password</th>
                    </tr>
                    <% if (cards.length > 0) { %>
                        <% cards.forEach(card => { %>
                                <tr>
                                    <td><a class="single" href="/wallet/<%= card._id %>"><%= card.app %></a></td>
                                    <td><a class="single" href="/wallet/<%= card._id %>"><%= card.user %></a></td>
                                    <td><a class="single" href="/wallet/<%= card._id %>"><%= card.pass %></a></td>
                                </tr>
                        <% }) %>
                      <% } else { %>
                        <p>No passwords yet. Add some!</p>
                      <% } %>
                </table>
                <a id="addPass" href="/add">+ Add Another Password +</a>
            </div>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>